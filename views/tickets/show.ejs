<% layout('../views/partials/boilerplate') %>
<% title = "Show Ticket" %>

<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card shadow-lg">
      <div class="card-header bg-primary text-white">
        <h2 class="mb-0"><%= ticket.eventName %></h2>
        <span class="badge bg-light text-dark mt-2"><%= ticket.eventCategory %></span>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <h5>Event Details</h5>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <strong>Date:</strong> 
                <%= ticket.eventDate.toLocaleDateString('en-IN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
              </li>
              <li class="list-group-item">
                <strong>Location:</strong> <%= ticket.location %>
              </li>
              <li class="list-group-item">
                <strong>Price:</strong> 
                <span class="text-success fs-4">â‚¹<%= ticket.pricePerTicket.toLocaleString('en-IN') %></span> per ticket
              </li>
              <li class="list-group-item">
                <strong>Available:</strong> 
                <span class="badge bg-success fs-6"><%= ticket.ticketsAvailable %> tickets</span>
              </li>
            </ul>
          </div>
          <div class="col-md-6">
            <h5>Additional Information</h5>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <strong>Seller:</strong> <%= ticket.owner.username %>
              </li>
              <li class="list-group-item">
                <strong>Contact:</strong> <%= ticket.owner.email %>
              </li>
              <li class="list-group-item">
                <strong>Listed On:</strong> <%= ticket.createdAt.toLocaleDateString('en-IN') %>
              </li>
            </ul>
          </div>
        </div>

        <% if (ticket.description) { %>
          <hr />
          <h5>Description</h5>
          <p class="text-muted"><%= ticket.description %></p>
        <% } %>

        <hr />

        <div class="d-flex gap-2 flex-wrap">
          <% if (currentUser && ticket.owner.equals(currentUser._id)) { %>
            <a href="/tickets/<%= ticket._id %>/edit" class="btn btn-warning">
              Edit Ticket
            </a>
            <form action="/tickets/<%= ticket._id %>?_method=DELETE" method="POST" class="d-inline">
              <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this ticket?')">
                Delete Ticket
              </button>
            </form>
          <% } else if (currentUser) { %>
            <button class="btn btn-success btn-lg" disabled>
              Contact Seller (Feature Coming Soon)
            </button>
          <% } else { %>
            <a href="/users/login" class="btn btn-primary btn-lg">
              Login to Purchase
            </a>
          <% } %>

          <a href="/tickets" class="btn btn-secondary ms-auto">Back to All Tickets</a>
        </div>
      </div>
    </div>
  </div>
</div>
